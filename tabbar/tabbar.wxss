.custom-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 56px;
  background: #fff;
  display: flex;
}
.custom-tabbar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
    
}

.custom-tabbar-item-hover {
  opacity: 0.8;
}

.custom-tabbar-item-ico {
  display: block;
  width: 23px;
  height: 23px;
  padding: 5px 0;
}

.custom-tabbar-item-title {
  display: block;
  font-size: 12px;
  color: white;
  text-align: center;
}

.custom-tabbar-item-reminder {
}

.custom-tabbar-reminder-circle .custom-tabbar-item-reminder {
  position: absolute;
  top: 0;
  left: 50%;
  width: 20rpx;
  height: 20rpx;
  margin-top: -5rpx;
  margin-left: 20rpx;
  border-radius: 100%;
  background: red;
  font-size: 0;
}
