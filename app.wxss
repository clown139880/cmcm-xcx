/**app.wxss**/
.container {
  height: 100%;
    background: #fff;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.blank {
  height: 80px;  
}

.container-fluid{
  height: 100vh;
}

.custom-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 56px;
  background: #f35431;
  display: flex;
}

.custom-tabbar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.custom-tabbar-item-hover {
  opacity: 0.8;
}

.custom-tabbar-item-ico {
  display: block;
  width: 23px;
  height: 23px;
  padding: 5px 0;
}

.custom-tabbar-item-title {
  display: block;
  font-size: 12px;
  color: white;
  text-align: center;
}

